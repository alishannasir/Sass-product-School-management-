{
  "name": "sass_application",
  "version": "1.0.0",
  "description": "SaaS application built with Express, Mongoose, and React.js",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "node --loader ts-node/esm server.ts",
    "dev:watch": "nodemon --watch './**/*.ts' --ext 'ts' --exec 'node --loader ts-node/esm server.ts'",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@types/multer": "^1.4.12",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mongoose": "^8.14.3",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^7.0.3",
    "otp-generator": "^4.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.15.18",
    "@types/nodemailer": "^6.4.17",
    "@types/otp-generator": "^4.0.2",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
